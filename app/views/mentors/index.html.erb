<%= link_to 'Admin Mentors', admins_mentors_path, class: 'text-link white' %>
<div class="card">  
  <h1 class="card__title">Mentors</h1>

  <div class="card-list" id="mentors-list">
    <% @mentors.each do |mentor| %>
      <%= render partial: 'mentor', object: mentor %>
    <% end %>
  </div>
  <div class="card-row">
    
    <div id="new-mentor-form" class="card-row__add">
      <form action="<%= mentors_path %>" data-remote="true" method="post">
        <input value="" type="text" name="mentor[name]" id="mentor_name" class="text-input flex-align-left" placeholder="Add a new mentor name">
        <input type="submit" class="btn flex-align-right">
      </form>
    </div>
    
    <button id="new_mentor" class="btn--large card__button--primary">
      New Mentor
    </button>  
    
  </div>
</div>